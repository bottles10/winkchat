<div class="mx-auto mb-5 border rounded shadow-md md:w-1/2">
	<%= render 'post', post: @post %>
	<%= render 'comment', post: @post %>
</div>

<div class="flex justify-center space-x-5">
	<%= link_to "Back", posts_path, class: "border rounded py-2 px-6 bg-gray-200 hover:bg-white transition duration-300" %>
	<% if @post.user.id == current_user.id %>	
		<%= link_to "Edit", edit_post_path(@post), class: "border rounded py-2 px-6 bg-blue-500 hover:bg-blue-400 text-white transition duration-300" %>
	<% end %>
</div>