<div class="p-5 md:p-20 mx-auto border rounded-lg shadow-lg">
    <%= form_with model: @post do |f| %>
        <% if @post.errors.any? %>
        <div class="p-5 mb-10 text-red-600 border border-red-500 animate-pulse">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    
          <ul>
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    
        <div>
            <div class="flex items-center justify-center">
                <%= f.file_field :image, class: "border border-gray-300 rounded-lg p-2 text-center" %>
            </div>

            <div class="m-10">
                <%= f.text_area :caption, class: "border-0 focus:ring-0 border-b-2 border-blue-400 focus:border-green-300 text-gray-700", placeholder: "Enter Caption Here" %>
            </div>

            <div class="flex justify-center">
                <%= f.submit class: "bg-green-600 hover:bg-green-500 py-2 px-6 font-bold rounded-lg shadow-lg text-green-100" %>
            </div>
        </div>
    <% end %>
</div>