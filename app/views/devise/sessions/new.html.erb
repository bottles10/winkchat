<div class="mb-4 bg-white p-10 md:w-2/3 lg:w-1/2 mx-auto border rounded-lg shadow-md">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "md:w-1/2 mx-auto") do |f| %>
		<div class="shadow-xl w-full border rounded-lg">
			<div class="flex items-center rounded-t-lg ">
				<%= f.label :username, class: "p-3 w-20 text-right mr-8 text-gray-500 font-bold" %>
				<%= f.text_field :username, autocomplete: "username", placeholder: "@username", class: "w-1/2 md:w-full border-0 focus:ring-0 border-b-2 border-gray-400 focus:border-green-400 flex-1 py-2 placeholder-gray-300 outline-none" %>
			</div>

				<div class="flex items-center">
					<%= f.label :password, class: "p-3 w-20 text-right mr-8 text-gray-500 font-bold" %>
					<%= f.password_field :password, autocomplete: "current-password", class: "w-1/2 md:w-full border-0 focus:ring-0 border-b-2 border-gray-400 focus:border-green-400 flex-1 py-2 placeholder-gray-300 outline-none autofill:bg-transparent" %>
				</div>
		</div>

			<% if devise_mapping.rememberable? %>
				<div class="mt-10">
						<%= f.check_box :remember_me, class: "appearance-none checked:bg-green-400" %>
						<%= f.label :remember_me %>
				</div>
			<% end %>

			<div class="text-right">
				<%= f.submit "Log in", class: "py-3 px-8 bg-green-500 hover:bg-green-400 tranform hover:scale-105 text-white rounded shadow-lg transition duration-300" %>
			</div>
	<% end %>
</div>

<div class="flex space-x-4 pl-2 justify-center">
  <%= render "devise/shared/links" %>
</div>
